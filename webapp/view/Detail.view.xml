<mvc:View controllerName="flightui5jn.controller.Detail"
   	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	core:require="{DateType: 'sap/ui/model/type/Date'}"
	>
   
     <Page id="Detail" title="{i18n>title}" showNavButton="true"
		navButtonPress=".onNavBack">
    	<Table
		items="{
			path: '/zr_flight_det_jn',
			sorter: {
				path: 'Fldate'
			}
		}">
		
		<columns>
			<Column>
				<Text text="{i18n>Fldate}" />
			</Column>
			<Column>
				<Text text="{i18n>Price}" />
			</Column>
			<Column>
				<Text text="{i18n>Currency}" />
			</Column>

		</columns>
		<items>
			<ColumnListItem vAlign="Middle" type="Navigation"  
						press=".onNavToEmpl">
				<cells>
					
			<Text text="{Fldate}" wrapping="false"  />
					<Text text="{Price}" wrapping="false"/>
					<Text text="{Currency}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
    </Page>
  
</mvc:View>